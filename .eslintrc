{ 
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "experimentalDecorators": true,
      "jsx": true,
      "classes": true
    },
    "sourceType": "module"
  },
  "rules": {
      "no-dupe-args": "error",
      "no-dupe-keys": "error",
      "quotes": ["error", "single"],
      "semi": [2, "never"],
      "quote-props": [2, "as-needed"],
      "padding-line-between-statements": ["error", { 
        "blankLine": "always", 
        "prev": "*", 
        "next": "return" 
      }],
      "space-before-blocks": ["error", {
        "functions": "always", 
        "keywords": "always", 
        "classes": "always" 
      }],
      "space-in-parens": ["error", "never"],
      "no-var": "error"
    }
}
